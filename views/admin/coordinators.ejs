<!DOCTYPE html>
<html>
<head>
    <title>Manage Coordinators - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">Manage Coordinators</span>
            <div>
                <a href="/admin/dashboard" class="btn btn-outline-light btn-sm me-2">‚Üê Dashboard</a>
                <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Coordinator Management</h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCoordinatorModal">+ Create Coordinator</button>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Club</th>
                            <th>Events Coordinated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% coordinators.forEach(coord => { %>
                            <tr>
                                <td><%= coord.MemberID %></td>
                                <td><strong><%= coord.MemberName %></strong></td>
                                <td><%= coord.Email || '-' %></td>
                                <td><%= coord.Phone || '-' %></td>
                                <td><%= coord.ClubName || '-' %></td>
                                <td><span class="badge bg-info"><%= coord.eventCount || 0 %></span></td>
                                <td>
                                    <button class="btn btn-sm btn-success" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#assignEventModal<%= coord.MemberID %>">
                                        Assign Event
                                    </button>
                                    <a href="/admin/coordinators/<%= coord.MemberID %>/delete" 
                                       class="btn btn-sm btn-danger" 
                                       onclick="return confirm('Delete this coordinator?')">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Create Coordinator Modal -->
    <div class="modal fade" id="createCoordinatorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Coordinator</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/coordinators/create">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Name *</label>
                            <input type="text" name="memberName" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="email" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input type="text" name="phone" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Club</label>
                            <select name="clubId" class="form-select">
                                <option value="">No Club</option>
                                <% clubs.forEach(club => { %>
                                    <option value="<%= club.ClubID %>"><%= club.ClubName %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Create Coordinator</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Assign Event Modals -->
    <% coordinators.forEach(coord => { %>
        <div class="modal fade" id="assignEventModal<%= coord.MemberID %>" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Assign Event to <%= coord.MemberName %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form method="POST" action="/admin/coordinators/<%= coord.MemberID %>/assign-event">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Select Event</label>
                                <select name="eventId" class="form-select" required>
                                    <option value="">Choose an event...</option>
                                    <% events.forEach(event => { %>
                                        <option value="<%= event.EventID %>"><%= event.EventName %> - <%= new Date(event.EventDate).toLocaleDateString() %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Assign Event</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    <% }) %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

