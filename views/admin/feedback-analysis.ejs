<!DOCTYPE html>
<html>
<head>
    <title>Feedback Analysis - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">Feedback Analysis Dashboard</span>
            <div>
                <a href="/admin/dashboard" class="btn btn-outline-light btn-sm me-2">‚Üê Dashboard</a>
                <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Feedback Analysis</h2>
            <p class="text-muted">Analyze participant feedback to identify recurring issues and improvement opportunities</p>
        </div>

        <% if (events.length === 0) { %>
            <div class="alert alert-info">
                <h5>No events with feedback available</h5>
                <p>There are no events in the system that have received participant feedback yet.</p>
            </div>
        <% } else { %>
            <div class="row">
                <% events.forEach(event => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><%= event.EventName %></h5>
                                <p class="card-text">
                                    <small class="text-muted">Date: <%= new Date(event.EventDate).toLocaleDateString() %></small><br>
                                    <small class="text-muted">Feedback Received: <%= event.totalFeedback %></small>
                                </p>
                                <a href="/feedback-analysis/event/<%= event.EventID %>" class="btn btn-primary">Analyze Feedback</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>