<!DOCTYPE html>
<html>
<head>
    <title>Expenditure Management - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">Expenditure Management</span>
            <div>
                <a href="/admin/dashboard" class="btn btn-outline-light btn-sm me-2">← Dashboard</a>
                <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <h2 class="mb-4">All Expenditures</h2>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Event</th>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Budget Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% expenditures.forEach(exp => { 
                            const remaining = (exp.budgetInfo.totalBudget || 0) - (exp.budgetInfo.totalSpent || 0);
                            const isOverBudget = remaining < 0;
                        %>
                            <tr>
                                <td><%= exp.ExpenseID %></td>
                                <td>
                                    <strong><%= exp.EventName %></strong><br>
                                    <small class="text-muted"><%= new Date(exp.EventDate).toLocaleDateString() %></small>
                                </td>
                                <td><%= exp.Category %></td>
                                <td><strong>₹<%= parseFloat(exp.Amount).toLocaleString() %></strong></td>
                                <td><%= new Date(exp.ExpenseDate).toLocaleDateString() %></td>
                                <td><%= exp.Description || '-' %></td>
                                <td>
                                    <div>
                                        <small>Budget: ₹<%= (exp.budgetInfo.totalBudget || 0).toLocaleString() %></small><br>
                                        <small>Spent: ₹<%= (exp.budgetInfo.totalSpent || 0).toLocaleString() %></small><br>
                                        <span class="badge <%= isOverBudget ? 'bg-danger' : 'bg-success' %>">
                                            <%= isOverBudget ? 'Over Budget' : 'Within Budget' %>
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

