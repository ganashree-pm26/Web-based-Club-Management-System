<!DOCTYPE html>
<html>
<head>
    <title>Manage Sponsors - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            background: radial-gradient(circle at top left, #4f46e5 0, #0f172a 45%, #020617 100%);
            color: #e5e7eb;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            padding: 24px 0;
        }
        .glass-navbar {
            background: rgba(15, 23, 42, 0.95) !important;
            border-bottom: 1px solid rgba(148, 163, 184, 0.3);
            backdrop-filter: blur(10px);
        }
        .card {
            background: rgba(15, 23, 42, 0.9) !important;
            border: 1px solid rgba(148, 163, 184, 0.3) !important;
            border-radius: 18px !important;
            color: #e5e7eb !important;
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.65) !important;
        }
        .table {
            color: #e5e7eb !important;
        }
        .table thead th {
            border-bottom: 1px solid rgba(148, 163, 184, 0.3) !important;
            color: #e5e7eb !important;
            background: rgba(30, 41, 59, 0.6) !important;
        }
        .table tbody tr {
            border-bottom: 1px solid rgba(148, 163, 184, 0.2) !important;
        }
        .table tbody td {
            background: rgba(15, 23, 42, 0.5) !important;
            color: #e5e7eb !important;
        }
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(30, 41, 59, 0.3) !important;
        }
        .table-striped tbody tr:nth-of-type(even) {
            background-color: rgba(15, 23, 42, 0.5) !important;
        }
        .modal-content {
            background: rgba(15, 23, 42, 0.95) !important;
            border: 1px solid rgba(148, 163, 184, 0.3) !important;
            color: #e5e7eb !important;
        }
        .modal-header {
            border-bottom: 1px solid rgba(148, 163, 184, 0.3) !important;
        }
        .modal-footer {
            border-top: 1px solid rgba(148, 163, 184, 0.3) !important;
        }
        .form-control, .form-select {
            background: rgba(30, 41, 59, 0.8) !important;
            border: 1px solid rgba(148, 163, 184, 0.3) !important;
            color: #e5e7eb !important;
            border-radius: 8px !important;
        }
        .form-control:focus, .form-select:focus {
            background: rgba(30, 41, 59, 0.9) !important;
            border-color: #4f46e5 !important;
            color: #e5e7eb !important;
            box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.25) !important;
        }
        .form-control::placeholder {
            color: #64748b !important;
        }
        label {
            color: #e5e7eb !important;
        }
        h1, h2, h3, h4, h5, h6 {
            color: #e5e7eb !important;
        }
        .btn-close {
            filter: invert(1);
        }
        strong {
            color: #e5e7eb !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark glass-navbar mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">Manage Sponsors</span>
            <div>
                <a href="/admin/dashboard" class="btn btn-outline-light btn-sm me-2">← Dashboard</a>
                <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-white">Sponsor Management</h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createSponsorModal">+ Create Sponsor</button>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Sponsor Name</th>
                            <th>Event</th>
                            <th>Contribution</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sponsors.forEach(sponsor => { %>
                            <tr>
                                <td><%= sponsor.SponsorID %></td>
                                <td><strong><%= sponsor.SponsorName %></strong></td>
                                <td><%= sponsor.EventName || 'No Event' %></td>
                                <td>₹<%= (sponsor.Contribution || 0).toLocaleString() %></td>
                                <td>
                                    <button class="btn btn-sm btn-warning me-2" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#editSponsorModal<%= sponsor.SponsorID %>">
                                        Edit
                                    </button>
                                    <a href="/admin/sponsors/<%= sponsor.SponsorID %>/delete" 
                                       class="btn btn-sm btn-danger" 
                                       onclick="return confirm('Delete this sponsor?')">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Create Sponsor Modal -->
    <div class="modal fade" id="createSponsorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Sponsor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/sponsors/create">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Sponsor Name *</label>
                            <input type="text" name="sponsorName" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Event</label>
                            <select name="eventId" class="form-select">
                                <option value="">No Event</option>
                                <% events.forEach(event => { %>
                                    <option value="<%= event.EventID %>"><%= event.EventName %> - <%= new Date(event.EventDate).toLocaleDateString() %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contribution Amount</label>
                            <input type="number" name="contribution" class="form-control" min="0" step="0.01">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Create Sponsor</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Sponsor Modals -->
    <% sponsors.forEach(sponsor => { %>
    <div class="modal fade" id="editSponsorModal<%= sponsor.SponsorID %>" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Sponsor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/sponsors/<%= sponsor.SponsorID %>/update">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Sponsor Name *</label>
                            <input type="text" name="sponsorName" class="form-control" value="<%= sponsor.SponsorName %>" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Event</label>
                            <select name="eventId" class="form-select">
                                <option value="">No Event</option>
                                <% events.forEach(event => { %>
                                    <option value="<%= event.EventID %>" <%= sponsor.EventID == event.EventID ? 'selected' : '' %>><%= event.EventName %> - <%= new Date(event.EventDate).toLocaleDateString() %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contribution Amount</label>
                            <input type="number" name="contribution" class="form-control" min="0" step="0.01" value="<%= sponsor.Contribution || 0 %>">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update Sponsor</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% }) %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>