<!DOCTYPE html>
<html>
<head>
    <title>Sponsor Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            background: radial-gradient(circle at top left, #4f46e5 0, #0f172a 45%, #020617 100%);
            color: #e5e7eb;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            padding: 24px 0;
        }
        .glass-card {
            background: rgba(15, 23, 42, 0.9);
            border-radius: 18px;
            border: 1px solid rgba(148, 163, 184, 0.3);
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.65);
            color: #e5e7eb;
        }
        .glass-navbar {
            background: rgba(15, 23, 42, 0.95) !important;
            border-bottom: 1px solid rgba(148, 163, 184, 0.3);
            backdrop-filter: blur(10px);
        }
        .contribution-card {
            background: linear-gradient(135deg, rgba(79, 70, 229, 0.3) 0%, rgba(139, 92, 246, 0.3) 100%);
            color: white;
            border-radius: 18px;
            padding: 25px;
            margin-bottom: 25px;
            border: 1px solid rgba(148, 163, 184, 0.3);
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.65);
        }
        .event-card {
            background: rgba(15, 23, 42, 0.9);
            border: 1px solid rgba(148, 163, 184, 0.3);
            border-radius: 18px;
            padding: 20px;
            margin-bottom: 20px;
            transition: all 0.3s;
            color: #e5e7eb;
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.65);
        }
        .event-card:hover {
            box-shadow: 0 24px 60px rgba(15, 23, 42, 0.8);
            transform: translateY(-2px);
            border-color: rgba(148, 163, 184, 0.5);
        }
        .category-breakdown {
            background: rgba(15, 23, 42, 0.9);
            border: 1px solid rgba(148, 163, 184, 0.3);
            border-radius: 12px;
            padding: 15px;
            margin-top: 15px;
        }
        .category-breakdown .table tbody td {
            background: rgba(15, 23, 42, 0.8) !important;
        }
        .progress-bar-custom {
            height: 25px;
            border-radius: 5px;
        }
        .stat-box {
            background: rgba(30, 41, 59, 0.6);
            border: 1px solid rgba(148, 163, 184, 0.2);
            border-radius: 12px;
            padding: 15px;
            text-align: center;
            color: #e5e7eb;
        }
        .text-muted {
            color: #94a3b8 !important;
        }
        h1, h2, h3, h4, h5, h6 {
            color: #e5e7eb !important;
        }
        .alert {
            background: rgba(15, 23, 42, 0.9) !important;
            border: 1px solid rgba(148, 163, 184, 0.3) !important;
            color: #e5e7eb !important;
            border-radius: 12px !important;
        }
        .alert-info {
            background: rgba(59, 130, 246, 0.2) !important;
            border-color: rgba(59, 130, 246, 0.4) !important;
            color: #93c5fd !important;
        }
        .table {
            color: #e5e7eb !important;
            background: transparent !important;
            margin-bottom: 0 !important;
        }
        .table thead th {
            border-bottom: 1px solid rgba(148, 163, 184, 0.3) !important;
            color: #e5e7eb !important;
            background: rgba(30, 41, 59, 0.6) !important;
            padding: 12px 15px !important;
            font-weight: 600 !important;
        }
        .table tbody tr {
            border-bottom: 1px solid rgba(148, 163, 184, 0.2) !important;
        }
        .table tbody td {
            background: rgba(15, 23, 42, 0.5) !important;
            color: #e5e7eb !important;
            padding: 12px 15px !important;
            vertical-align: middle !important;
        }
        .table-hover tbody tr:hover {
            background: rgba(30, 41, 59, 0.6) !important;
        }
        .table-hover tbody tr:hover td {
            background: rgba(30, 41, 59, 0.6) !important;
        }
        .table-responsive {
            border-radius: 12px;
            overflow: hidden;
        }
        .table-sm {
            font-size: 0.9rem;
        }
        .table-sm thead th {
            padding: 10px 12px !important;
        }
        .table-sm tbody td {
            padding: 10px 12px !important;
        }
        .progress {
            background: rgba(30, 41, 59, 0.8) !important;
            border-radius: 8px !important;
        }
        .badge {
            padding: 6px 12px !important;
            font-weight: 500 !important;
            font-size: 0.75rem !important;
        }
        @media (max-width: 768px) {
            .table-responsive {
                font-size: 0.85rem;
            }
            .table thead th,
            .table tbody td {
                padding: 8px 10px !important;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark glass-navbar mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">
                <strong>Sponsor Dashboard</strong> - <%= (sponsor && sponsor.SponsorName) ? sponsor.SponsorName : (user.name || user.username) %>
            </span>
            <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
        </div>
    </nav>

    <div class="container">
        <% if(!sponsor || !events || events.length === 0) { %>
            <div class="alert alert-info">
                <h5>No Sponsorships Found</h5>
                <p class="mb-0">You don't have any active sponsorships at the moment.</p>
            </div>
        <% } else { %>
            <!-- Total Contribution Summary -->
            <div class="contribution-card mb-4">
                <h3 class="mb-3">Total Contribution Summary</h3>
                <div class="row">
                    <div class="col-md-4">
                        <h5>Total Contributed</h5>
                        <h2>₹<%= (events && Array.isArray(events)) ? events.reduce((sum, e) => sum + parseFloat(e.contribution || 0), 0).toLocaleString() : '0' %></h2>
                    </div>
                    <div class="col-md-4">
                        <h5>Events Sponsored</h5>
                        <h2><%= events.length %></h2>
                    </div>
                    <div class="col-md-4">
                        <h5>Total Budget Supported</h5>
                        <h2>₹<%= (events && Array.isArray(events)) ? events.reduce((sum, e) => sum + parseFloat(e.totalBudget || 0), 0).toLocaleString() : '0' %></h2>
                    </div>
                </div>
            </div>

            <!-- Event Breakdowns -->
            <h2 class="mb-4 text-white">Event Breakdowns</h2>
            
            <% events.forEach(event => { %>
                <div class="event-card">
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <h4><%= event.EventName || 'Unnamed Event' %></h4>
                            <p class="text-muted mb-2">
                                <strong>Date:</strong> <%= event.EventDate ? new Date(event.EventDate).toLocaleDateString() : 'TBD' %> | 
                                <strong>Venue:</strong> <%= event.Venue || 'TBD' %>
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="stat-box">
                                <small class="text-muted">Your Contribution</small>
                                <h4 class="mb-0 text-primary">₹<%= parseFloat(event.contribution || 0).toLocaleString() %></h4>
                                <small class="text-muted"><%= (event.sponsorPercentage || 0) %>% of total budget</small>
                            </div>
                        </div>
                    </div>

                    <!-- Budget Overview -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="stat-box">
                                <small class="text-muted">Total Budget</small>
                                <h5 class="mb-0">₹<%= parseFloat(event.totalBudget || 0).toLocaleString() %></h5>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box">
                                <small class="text-muted">Total Spent</small>
                                <h5 class="mb-0">₹<%= parseFloat(event.totalSpent || 0).toLocaleString() %></h5>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box">
                                <small class="text-muted">Remaining</small>
                                <% 
                                    const remaining = (parseFloat(event.totalBudget || 0) - parseFloat(event.totalSpent || 0));
                                    const remainingClass = remaining < 0 ? 'text-danger' : 'text-success';
                                %>
                                <h5 class="mb-0 <%= remainingClass %>">
                                    ₹<%= remaining.toLocaleString() %>
                                </h5>
                            </div>
                        </div>
                    </div>

                    <!-- Spending Progress -->
                    <div class="mb-3">
                        <small class="text-muted">Overall Spending Progress</small>
                        <div class="progress progress-bar-custom">
                            <% 
                                const totalBudget = parseFloat(event.totalBudget || 0);
                                const totalSpent = parseFloat(event.totalSpent || 0);
                                const progressPercent = totalBudget > 0 
                                    ? Math.min((totalSpent / totalBudget * 100), 100) 
                                    : 0;
                                const progressClass = progressPercent > 100 ? 'bg-danger' : 'bg-success';
                                const progressWidthValue = progressPercent.toFixed(1);
                            %>
                            <div class="progress-bar <%= progressClass %>" 
                                 role="progressbar" 
                                 data-width="<%= progressWidthValue %>">
                                <%= progressPercent.toFixed(1) %>%
                            </div>
                        </div>
                    </div>

                    <!-- Category Breakdown -->
                    <% if(event.categories && event.categories.length > 0) { %>
                        <h5 class="mt-4 mb-3">How Your Contribution Was Used (by Category)</h5>
                        <div class="category-breakdown">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover">
                                    <thead>
                                        <tr>
                                            <th>Category</th>
                                            <th class="text-end">Total Allocated</th>
                                            <th class="text-end">Total Spent</th>
                                            <th class="text-end">Your Share (Allocated)</th>
                                            <th class="text-end">Your Share (Spent)</th>
                                            <th class="text-center">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% event.categories.forEach(cat => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= cat.category || '-' %></strong>
                                                    <% if(cat.explanation) { %>
                                                        <br><small class="text-muted"><%= cat.explanation %></small>
                                                    <% } %>
                                                </td>
                                                <td class="text-end">₹<%= parseFloat(cat.totalAllocated || 0).toLocaleString() %></td>
                                                <td class="text-end">₹<%= parseFloat(cat.totalSpent || 0).toLocaleString() %></td>
                                                <td class="text-end"><strong>₹<%= parseFloat(cat.sponsorShare || 0).toLocaleString() %></strong></td>
                                                <td class="text-end"><strong class="text-primary">₹<%= parseFloat(cat.sponsorSpent || 0).toLocaleString() %></strong></td>
                                                <td class="text-center">
                                                    <% if(parseFloat(cat.totalSpent || 0) > 0) { %>
                                                        <span class="badge bg-success">Active</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">Pending</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    <% } %>

                    <!-- Recent Expenditures -->
                    <% if(event.expenditures && event.expenditures.length > 0) { %>
                        <h5 class="mt-4 mb-3">Recent Expenditures</h5>
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Category</th>
                                        <th class="text-end">Amount</th>
                                        <th class="text-end">Your Share</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% event.expenditures.slice(0, 5).forEach(exp => { %>
                                        <tr>
                                            <td><%= exp.ExpenseDate ? new Date(exp.ExpenseDate).toLocaleDateString() : '-' %></td>
                                            <td><%= exp.Category || '-' %></td>
                                            <td class="text-end">₹<%= parseFloat(exp.Amount || 0).toLocaleString() %></td>
                                            <td class="text-end"><strong class="text-primary">₹<%= parseFloat(((parseFloat(exp.Amount || 0) * parseFloat(event.sponsorPercentage || 0)) / 100).toFixed(2)).toLocaleString() %></strong></td>
                                            <td><%= exp.Description || '-' %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            <% }) %>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Set progress bar widths from data attributes
        document.querySelectorAll('.progress-bar[data-width]').forEach(function(bar) {
            bar.style.width = bar.getAttribute('data-width') + '%';
        });
    </script>
</body>
</html>

