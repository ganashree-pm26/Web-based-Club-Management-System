<!DOCTYPE html>
<html>
<head>
    <title>Sponsor Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .contribution-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 25px;
        }
        .event-card {
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            transition: box-shadow 0.3s;
        }
        .event-card:hover {
            box-shadow: 0 6px 12px rgba(0,0,0,0.1);
        }
        .category-breakdown {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-top: 15px;
        }
        .progress-bar-custom {
            height: 25px;
            border-radius: 5px;
        }
        .stat-box {
            background: white;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            border: 1px solid #e9ecef;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">
                <strong>Sponsor Dashboard</strong> - <%= sponsor?.SponsorName || user.name || user.username %>
            </span>
            <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
        </div>
    </nav>

    <div class="container">
        <% if(!sponsor || events.length === 0) { %>
            <div class="alert alert-info">
                <h5>No Sponsorships Found</h5>
                <p class="mb-0">You don't have any active sponsorships at the moment.</p>
            </div>
        <% } else { %>
            <!-- Total Contribution Summary -->
            <div class="contribution-card mb-4">
                <h3 class="mb-3">Total Contribution Summary</h3>
                <div class="row">
                    <div class="col-md-4">
                        <h5>Total Contributed</h5>
                        <h2>₹<%= events.reduce((sum, e) => sum + parseFloat(e.contribution || 0), 0).toLocaleString() %></h2>
                    </div>
                    <div class="col-md-4">
                        <h5>Events Sponsored</h5>
                        <h2><%= events.length %></h2>
                    </div>
                    <div class="col-md-4">
                        <h5>Total Budget Supported</h5>
                        <h2>₹<%= events.reduce((sum, e) => sum + parseFloat(e.totalBudget || 0), 0).toLocaleString() %></h2>
                    </div>
                </div>
            </div>

            <!-- Event Breakdowns -->
            <h2 class="mb-4">Event Breakdowns</h2>
            
            <% events.forEach(event => { %>
                <div class="event-card">
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <h4><%= event.EventName %></h4>
                            <p class="text-muted mb-2">
                                <strong>Date:</strong> <%= new Date(event.EventDate).toLocaleDateString() %> | 
                                <strong>Venue:</strong> <%= event.Venue %>
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="stat-box">
                                <small class="text-muted">Your Contribution</small>
                                <h4 class="mb-0 text-primary">₹<%= parseFloat(event.contribution).toLocaleString() %></h4>
                                <small class="text-muted"><%= event.sponsorPercentage %>% of total budget</small>
                            </div>
                        </div>
                    </div>

                    <!-- Budget Overview -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="stat-box">
                                <small class="text-muted">Total Budget</small>
                                <h5 class="mb-0">₹<%= parseFloat(event.totalBudget).toLocaleString() %></h5>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box">
                                <small class="text-muted">Total Spent</small>
                                <h5 class="mb-0">₹<%= parseFloat(event.totalSpent).toLocaleString() %></h5>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box">
                                <small class="text-muted">Remaining</small>
                                <h5 class="mb-0 <%= (event.totalBudget - event.totalSpent) < 0 ? 'text-danger' : 'text-success' %>">
                                    ₹<%= (event.totalBudget - event.totalSpent).toLocaleString() %>
                                </h5>
                            </div>
                        </div>
                    </div>

                    <!-- Spending Progress -->
                    <div class="mb-3">
                        <small class="text-muted">Overall Spending Progress</small>
                        <div class="progress progress-bar-custom">
                            <div class="progress-bar <%= (event.totalSpent / event.totalBudget * 100) > 100 ? 'bg-danger' : 'bg-success' %>" 
                                 role="progressbar" 
                                 style="width: <%= Math.min((event.totalSpent / event.totalBudget * 100), 100) %>%">
                                <%= ((event.totalSpent / event.totalBudget) * 100).toFixed(1) %>%
                            </div>
                        </div>
                    </div>

                    <!-- Category Breakdown -->
                    <h5 class="mt-4 mb-3">How Your Contribution Was Used (by Category)</h5>
                    <div class="category-breakdown">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Total Allocated</th>
                                    <th>Total Spent</th>
                                    <th>Your Share (Allocated)</th>
                                    <th>Your Share (Spent)</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% event.categories.forEach(cat => { %>
                                    <tr>
                                        <td>
                                            <strong><%= cat.category %></strong>
                                            <% if(cat.explanation) { %>
                                                <br><small class="text-muted"><%= cat.explanation %></small>
                                            <% } %>
                                        </td>
                                        <td>₹<%= parseFloat(cat.totalAllocated).toLocaleString() %></td>
                                        <td>₹<%= parseFloat(cat.totalSpent).toLocaleString() %></td>
                                        <td><strong>₹<%= parseFloat(cat.sponsorShare).toLocaleString() %></strong></td>
                                        <td><strong class="text-primary">₹<%= parseFloat(cat.sponsorSpent).toLocaleString() %></strong></td>
                                        <td>
                                            <% if(cat.totalSpent > 0) { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Pending</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Recent Expenditures -->
                    <% if(event.expenditures && event.expenditures.length > 0) { %>
                        <h5 class="mt-4 mb-3">Recent Expenditures</h5>
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Category</th>
                                        <th>Amount</th>
                                        <th>Your Share</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% event.expenditures.slice(0, 5).forEach(exp => { %>
                                        <tr>
                                            <td><%= new Date(exp.ExpenseDate).toLocaleDateString() %></td>
                                            <td><%= exp.Category %></td>
                                            <td>₹<%= parseFloat(exp.Amount).toLocaleString() %></td>
                                            <td><strong class="text-primary">₹<%= (parseFloat(exp.Amount) * parseFloat(event.sponsorPercentage) / 100).toFixed(2) %></strong></td>
                                            <td><%= exp.Description || '-' %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            <% }) %>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

