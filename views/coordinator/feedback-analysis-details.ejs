<!DOCTYPE html>
<html>
<head>
    <title><%= event.EventName %> - Feedback Analysis</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .metric-card {
            border-left: 4px solid #007bff;
            transition: transform 0.2s;
        }
        .metric-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .issue-card {
            border-left: 3px solid #dc3545;
        }
        .suggestion-card {
            border-left: 3px solid #28a745;
        }
        .keyword-badge {
            margin: 2px;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <span class="navbar-brand"><%= event.EventName %> - Feedback Analysis</span>
            <div>
                <a href="/feedback-analysis/dashboard" class="btn btn-outline-light btn-sm me-2">‚Üê All Events</a>
                <a href="/coordinator/dashboard" class="btn btn-outline-light btn-sm me-2">Dashboard</a>
                <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><%= event.EventName %></h3>
                        <p class="card-text">
                            <strong>Date:</strong> <%= new Date(event.EventDate).toLocaleDateString() %><br>
                            <% if (event.EventDescription) { %>
                                <strong>Description:</strong> <%= event.EventDescription %>
                            <% } %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Metrics -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card metric-card bg-primary text-white">
                    <div class="card-body text-center">
                        <h5>Total Feedback</h5>
                        <h2><%= analysis.totalFeedback %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card metric-card bg-info text-white">
                    <div class="card-body text-center">
                        <h5>Avg Rating</h5>
                        <h2><%= analysis.averageRating %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card metric-card bg-success text-white">
                    <div class="card-body text-center">
                        <h5>Positive</h5>
                        <h2><%= analysis.positiveFeedback %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card metric-card bg-danger text-white">
                    <div class="card-body text-center">
                        <h5>Negative</h5>
                        <h2><%= analysis.negativeFeedback %></h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sentiment Analysis Chart -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Sentiment Analysis</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="sentimentChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Common Issues -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5>Common Issues Identified</h5>
                    </div>
                    <div class="card-body">
                        <% if (analysis.commonIssues.length > 0) { %>
                            <% analysis.commonIssues.forEach(issue => { %>
                                <div class="card mb-2 issue-card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <strong><%= issue.issue %></strong>
                                            <span class="badge bg-danger"><%= issue.count %> mentions</span>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted">No common issues identified from feedback.</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Improvement Suggestions -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5>Improvement Suggestions</h5>
                    </div>
                    <div class="card-body">
                        <% if (analysis.improvementSuggestions.length > 0) { %>
                            <% analysis.improvementSuggestions.forEach(suggestion => { %>
                                <div class="card mb-2 suggestion-card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <strong><%= suggestion.suggestion %></strong>
                                            <span class="badge bg-success"><%= suggestion.count %> suggestions</span>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted">No improvement suggestions identified from feedback.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Keywords -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Top Keywords in Feedback</h5>
                    </div>
                    <div class="card-body">
                        <% if (analysis.topKeywords.length > 0) { %>
                            <% analysis.topKeywords.forEach(keyword => { %>
                                <span class="badge bg-secondary keyword-badge">
                                    <%= keyword.word %> (<%= keyword.count %>)
                                </span>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted">No keywords extracted from feedback.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Sentiment Analysis Chart
        const ctx = document.getElementById('sentimentChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Positive', 'Negative', 'Neutral'],
                datasets: [{
                    data: [
                        <%= analysis.positiveFeedback %>,
                        <%= analysis.negativeFeedback %>,
                        <%= analysis.neutralFeedback %>
                    ],
                    backgroundColor: [
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(108, 117, 125, 0.8)'
                    ],
                    borderColor: [
                        'rgba(40, 167, 69, 1)',
                        'rgba(220, 53, 69, 1)',
                        'rgba(108, 117, 125, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Feedback Sentiment Distribution'
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>