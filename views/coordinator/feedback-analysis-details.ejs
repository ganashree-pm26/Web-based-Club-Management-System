<!DOCTYPE html>
<html>
<head>
    <title><%= event.EventName %> - Feedback Analysis</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            min-height: 100vh;
            background: radial-gradient(circle at top left, #4f46e5 0, #0f172a 45%, #020617 100%);
            color: #e5e7eb;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            padding: 24px 0;
        }
        .glass-navbar {
            background: rgba(15, 23, 42, 0.95) !important;
            border-bottom: 1px solid rgba(148, 163, 184, 0.3);
            backdrop-filter: blur(10px);
        }
        .card {
            background: rgba(15, 23, 42, 0.9) !important;
            border: 1px solid rgba(148, 163, 184, 0.3) !important;
            border-radius: 18px !important;
            color: #e5e7eb !important;
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.65) !important;
        }
        .card-header {
            background: rgba(30, 41, 59, 0.8) !important;
            border-bottom: 1px solid rgba(148, 163, 184, 0.3) !important;
            color: #e5e7eb !important;
        }
        .metric-card {
            border-left: 4px solid rgba(79, 70, 229, 0.5);
            transition: transform 0.2s;
        }
        .metric-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 24px 60px rgba(15, 23, 42, 0.8) !important;
        }
        .issue-card {
            border-left: 3px solid rgba(239, 68, 68, 0.5);
            background: rgba(15, 23, 42, 0.7) !important;
        }
        .suggestion-card {
            border-left: 3px solid rgba(34, 197, 94, 0.5);
            background: rgba(15, 23, 42, 0.7) !important;
        }
        .positive-feedback-card {
            border-left: 3px solid rgba(34, 197, 94, 0.2);
            background: rgba(15, 23, 42, 0.5) !important;
            color: rgba(229, 231, 235, 0.4) !important;
        }
        .positive-feedback-card strong {
            color: rgba(229, 231, 235, 0.4) !important;
        }
        .keyword-badge {
            margin: 2px;
        }
        h1, h2, h3, h4, h5, h6 {
            color: #e5e7eb !important;
        }
        .text-muted {
            color: #94a3b8 !important;
        }
        strong {
            color: #e5e7eb !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark glass-navbar mb-4">
        <div class="container-fluid">
            <span class="navbar-brand"><%= event.EventName %> - Feedback Analysis</span>
            <div>
                <a href="/feedback-analysis/dashboard" class="btn btn-outline-light btn-sm me-2">‚Üê All Events</a>
                <a href="/coordinator/dashboard" class="btn btn-outline-light btn-sm me-2">Dashboard</a>
                <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><%= event.EventName %></h3>
                        <p class="card-text">
                            <strong>Date:</strong> <%= new Date(event.EventDate).toLocaleDateString() %><br>
                            <% if (event.EventDescription) { %>
                                <strong>Description:</strong> <%= event.EventDescription %>
                            <% } %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Metrics -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card metric-card" style="background: linear-gradient(135deg, rgba(79, 70, 229, 0.3) 0%, rgba(139, 92, 246, 0.3) 100%); border: 1px solid rgba(148, 163, 184, 0.3);">
                    <div class="card-body text-center">
                        <h5>Total Feedback</h5>
                        <h2><%= analysis.totalFeedback %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card metric-card" style="background: linear-gradient(135deg, rgba(59, 130, 246, 0.3) 0%, rgba(96, 165, 250, 0.3) 100%); border: 1px solid rgba(148, 163, 184, 0.3);">
                    <div class="card-body text-center">
                        <h5>Avg Rating</h5>
                        <h2><%= analysis.averageRating %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card metric-card" style="background: linear-gradient(135deg, rgba(34, 197, 94, 0.3) 0%, rgba(74, 222, 128, 0.3) 100%); border: 1px solid rgba(148, 163, 184, 0.3);">
                    <div class="card-body text-center">
                        <h5>Positive</h5>
                        <h2><%= analysis.positiveFeedback %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card metric-card" style="background: linear-gradient(135deg, rgba(239, 68, 68, 0.3) 0%, rgba(248, 113, 113, 0.3) 100%); border: 1px solid rgba(148, 163, 184, 0.3);">
                    <div class="card-body text-center">
                        <h5>Negative</h5>
                        <h2><%= analysis.negativeFeedback %></h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sentiment Analysis Chart -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Sentiment Analysis</h5>
                    </div>
                    <div class="card-body d-flex justify-content-center">
                        <div style="max-width: 300px; max-height: 300px;">
                            <canvas id="sentimentChart" 
                                    width="300" 
                                    height="300"
                                    data-positive="<%= analysis.positiveFeedback || 0 %>"
                                    data-negative="<%= analysis.negativeFeedback || 0 %>"
                                    data-neutral="<%= analysis.neutralFeedback || 0 %>"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Common Issues -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Common Issues Identified</h5>
                    </div>
                    <div class="card-body">
                        <% if (analysis.negativeFeedback === 0 && analysis.positiveFeedback > 0) { %>
                            <!-- Show message when all feedbacks are positive -->
                            <div class="text-center py-4">
                                <p class="mb-0" style="color: rgba(34, 197, 94, 0.8); font-size: 1.2rem; font-weight: 600;">
                                    All feedbacks are positive!!
                                </p>
                            </div>
                        <% } else if (analysis.commonIssues.length > 0) { %>
                            <% analysis.commonIssues.forEach(issue => { %>
                                <div class="card mb-2 issue-card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <strong><%= issue.issue %></strong>
                                            <span class="badge bg-danger"><%= issue.count %> mentions</span>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted">No common issues identified from feedback.</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Improvement Suggestions -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Improvement Suggestions</h5>
                    </div>
                    <div class="card-body">
                        <% if (analysis.negativeFeedback === 0 && analysis.positiveFeedback > 0) { %>
                            <!-- Show message when all feedbacks are positive -->
                            <div class="text-center py-4">
                                <p class="mb-0" style="color: rgba(34, 197, 94, 0.8); font-size: 1.2rem; font-weight: 600;">
                                    All feedbacks are positive!!
                                </p>
                            </div>
                        <% } else if (analysis.improvementSuggestions.length > 0) { %>
                            <% analysis.improvementSuggestions.forEach(suggestion => { %>
                                <div class="card mb-2 suggestion-card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <strong><%= suggestion.suggestion %></strong>
                                            <span class="badge bg-success"><%= suggestion.count %> suggestions</span>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted">No improvement suggestions identified from feedback.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Keywords -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Top Keywords in Feedback</h5>
                    </div>
                    <div class="card-body">
                        <% if (analysis.topKeywords.length > 0) { %>
                            <% analysis.topKeywords.forEach(keyword => { %>
                                <span class="badge bg-secondary keyword-badge">
                                    <%= keyword.word %> (<%= keyword.count %>)
                                </span>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted">No keywords extracted from feedback.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Sentiment Analysis Chart
        const ctx = document.getElementById('sentimentChart').getContext('2d');
        const canvas = document.getElementById('sentimentChart');
        const positiveCount = parseInt(canvas.getAttribute('data-positive')) || 0;
        const negativeCount = parseInt(canvas.getAttribute('data-negative')) || 0;
        const neutralCount = parseInt(canvas.getAttribute('data-neutral')) || 0;
        
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Positive', 'Negative', 'Neutral'],
                datasets: [{
                    data: [positiveCount, negativeCount, neutralCount],
                    backgroundColor: [
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(108, 117, 125, 0.8)'
                    ],
                    borderColor: [
                        'rgba(40, 167, 69, 1)',
                        'rgba(220, 53, 69, 1)',
                        'rgba(108, 117, 125, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Feedback Sentiment Distribution'
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>