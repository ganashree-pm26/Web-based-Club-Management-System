<!DOCTYPE html>
<html>
<head>
    <title>Members - <%= event.EventName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">Members - <%= event.EventName %></span>
            <a href="/coordinator/dashboard" class="btn btn-outline-light btn-sm">‚Üê Back to Dashboard</a>
        </div>
    </nav>

    <div class="container">
        <h2 class="mb-4">Members for <%= event.EventName %></h2>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Tasks Assigned</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% members.forEach(m => { %>
                            <tr>
                                <td><%= m.MemberID %></td>
                                <td><%= m.MemberName %></td>
                                <td><%= m.Email || "-" %></td>
                                <td><%= m.Phone || "-" %></td>
                                <td><%= m.Role || "-" %></td>
                                <td><%= m.taskCount || 0 %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

