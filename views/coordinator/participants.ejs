<!DOCTYPE html>
<html>
<head>
    <title>Manage Participants - <%= event.EventName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            background: radial-gradient(circle at top left, #4f46e5 0, #0f172a 45%, #020617 100%);
            color: #e5e7eb;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            padding: 24px 0;
        }
        .glass-navbar {
            background: rgba(15, 23, 42, 0.95) !important;
            border-bottom: 1px solid rgba(148, 163, 184, 0.3);
            backdrop-filter: blur(10px);
        }
        .card {
            background: rgba(15, 23, 42, 0.9) !important;
            border: 1px solid rgba(148, 163, 184, 0.3) !important;
            border-radius: 18px !important;
            color: #e5e7eb !important;
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.65) !important;
        }
        .table {
            color: #e5e7eb !important;
        }
        .table thead th {
            border-bottom: 1px solid rgba(148, 163, 184, 0.3) !important;
            color: #e5e7eb !important;
            background: rgba(30, 41, 59, 0.6) !important;
        }
        .table tbody tr {
            border-bottom: 1px solid rgba(148, 163, 184, 0.2) !important;
        }
        .table tbody td {
            background: rgba(15, 23, 42, 0.5) !important;
            color: #e5e7eb !important;
        }
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(30, 41, 59, 0.3) !important;
        }
        .table-striped tbody tr:nth-of-type(even) {
            background-color: rgba(15, 23, 42, 0.5) !important;
        }
        .form-control, .form-select {
            background: rgba(30, 41, 59, 0.8) !important;
            border: 1px solid rgba(148, 163, 184, 0.3) !important;
            color: #e5e7eb !important;
            border-radius: 8px !important;
        }
        .form-control:focus, .form-select:focus {
            background: rgba(30, 41, 59, 0.9) !important;
            border-color: #4f46e5 !important;
            color: #e5e7eb !important;
            box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.25) !important;
        }
        h1, h2, h3, h4, h5, h6 {
            color: #e5e7eb !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark glass-navbar mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">Manage Participants - <%= event.EventName %></span>
            <a href="/coordinator/dashboard" class="btn btn-outline-light btn-sm">← Back to Dashboard</a>
        </div>
    </nav>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-white">Participants for <%= event.EventName %></h2>
            <a href="/participants/register?eventId=<%= event.EventID %>" class="btn btn-primary">+ Add Participant</a>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Team</th>
                            <th>Pay Status</th>
                            <th>Amount</th>
                            <th>Attendance</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% participants.forEach(p => { %>
                            <tr>
                                <td><%= p.ParticipantID %></td>
                                <td><%= p.ParticipantName %></td>
                                <td><%= p.Email || "-" %></td>
                                <td><%= p.Phone || "-" %></td>
                                <td><%= p.TeamName ? p.TeamName + ' (' + p.TeamID + ')' : '-' %></td>
                                <td>
                                    <span class="badge <%= p.PayStatus === 'paid' ? 'bg-success' : p.PayStatus === 'pending' ? 'bg-warning' : 'bg-danger' %>">
                                        <%= p.PayStatus || 'unpaid' %>
                                    </span>
                                </td>
                                <td>₹<%= p.AmountPaid || 0 %></td>
                                <td>
                                    <form method="POST" action="/participants/<%= p.ParticipantID %>/attendance" class="d-inline">
                                        <select name="attendanceStatus" class="form-select form-select-sm" onchange="this.form.submit()">
                                            <option value="pending" <%= p.AttendanceStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="present" <%= p.AttendanceStatus === 'present' ? 'selected' : '' %>>Present</option>
                                            <option value="absent" <%= p.AttendanceStatus === 'absent' ? 'selected' : '' %>>Absent</option>
                                        </select>
                                    </form>
                                </td>
                                <td>
                                    <a href="/participants/edit/<%= p.ParticipantID %>" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="/participants/delete/<%= p.ParticipantID %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

