<!doctype html>
<html>
<head>
    <title>Submit Feedback</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            background: radial-gradient(circle at top left, #4f46e5 0, #0f172a 45%, #020617 100%);
            color: #e5e7eb;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            padding: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .glass-card {
            background: rgba(15, 23, 42, 0.9);
            border-radius: 18px;
            border: 1px solid rgba(148, 163, 184, 0.3);
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.65);
            color: #e5e7eb;
            padding: 30px;
            max-width: 600px;
            width: 100%;
        }
        .form-control {
            background: rgba(30, 41, 59, 0.8) !important;
            border: 1px solid rgba(148, 163, 184, 0.3) !important;
            color: #e5e7eb !important;
            border-radius: 8px !important;
        }
        .form-control:focus {
            background: rgba(30, 41, 59, 0.9) !important;
            border-color: #4f46e5 !important;
            color: #e5e7eb !important;
            box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.25) !important;
        }
        label {
            color: #e5e7eb !important;
        }
        h1, h2, h3, h4, h5, h6 {
            color: #e5e7eb !important;
        }
    </style>
</head>
<body>
  <div class="glass-card">
    <h2 class="mb-4">Feedback for <%= participant.EventName %></h2>

    <!-- FIXED URL: include eventId & participantId in action -->
    <form action="/feedback/submit/<%= participant.EventID %>/<%= participant.ParticipantID %>" method="POST">
        <div class="mb-3">
            <label class="form-label">Rating (1-5):</label>
            <input name="rating" type="number" min="1" max="5" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Comment:</label>
            <textarea name="comments" rows="5" class="form-control" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit Feedback</button>
    </form>
  </div>
</body>
</html>
