<!DOCTYPE html>
<html>
<head>
    <title>My Registrations - Participant Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .profile-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 25px;
        }
        .registration-card {
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            transition: box-shadow 0.3s;
        }
        .registration-card:hover {
            box-shadow: 0 6px 12px rgba(0,0,0,0.1);
        }
        .status-badge {
            font-size: 0.85rem;
            padding: 0.4rem 0.8rem;
        }
        .info-box {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 10px;
        }
        .event-date-badge {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">
                <strong>Participant Dashboard</strong>
                <% if(participant) { %>
                    - <%= participant.ParticipantName %>
                <% } %>
            </span>
            <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
        </div>
    </nav>

    <div class="container">
        <% if(!participant) { %>
            <div class="alert alert-info">
                <h5>No Profile Found</h5>
                <p class="mb-0">Your participant profile could not be found. Please contact support.</p>
            </div>
        <% } else { %>
            <!-- Profile Summary -->
            <div class="profile-card mb-4">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h3 class="mb-2"><%= participant.ParticipantName %></h3>
                        <p class="mb-1">
                            <i class="bi bi-envelope"></i> <%= participant.Email || 'No email provided' %>
                        </p>
                        <p class="mb-0">
                            <i class="bi bi-telephone"></i> <%= participant.Phone || 'No phone provided' %>
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <h4 class="mb-0"><%= registrations.length %></h4>
                        <p class="mb-0">Event<%= registrations.length !== 1 ? 's' : '' %> Registered</p>
                    </div>
                </div>
            </div>

            <!-- Registrations -->
            <h2 class="mb-4">My Event Registrations</h2>

            <% if(registrations.length === 0) { %>
                <div class="alert alert-info">
                    <h5>No Registrations Yet</h5>
                    <p class="mb-0">You haven't registered for any events yet. <a href="/participants/register" class="alert-link">Register for an event</a> to get started!</p>
                </div>
            <% } else { %>
                <% registrations.forEach(reg => { 
                    const eventDate = new Date(reg.EventDate);
                    const regDate = new Date(reg.RegDate);
                    const isUpcoming = eventDate > new Date();
                    const isPast = eventDate < new Date();
                %>
                    <div class="registration-card">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h4 class="mb-1"><%= reg.EventName %></h4>
                                        <p class="text-muted mb-2">
                                            <strong>Venue:</strong> <%= reg.Venue %><br>
                                            <strong>Event Date:</strong> 
                                            <span class="badge <%= isUpcoming ? 'bg-primary' : isPast ? 'bg-secondary' : 'bg-success' %> event-date-badge">
                                                <%= eventDate.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                                            </span>
                                        </p>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="info-box">
                                            <small class="text-muted d-block">Team Information</small>
                                            <% if(reg.TeamName) { %>
                                                <strong><%= reg.TeamName %></strong>
                                                <small class="text-muted"> (Team ID: <%= reg.TeamID %>)</small>
                                            <% } else { %>
                                                <span class="text-muted">Individual Participant</span>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="info-box">
                                            <small class="text-muted d-block">Registration Date</small>
                                            <strong><%= regDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></strong>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="info-box">
                                            <small class="text-muted d-block">Payment Status</small>
                                            <span class="badge <%= reg.PayStatus === 'paid' ? 'bg-success' : reg.PayStatus === 'pending' ? 'bg-warning' : 'bg-danger' %> status-badge">
                                                <%= reg.PayStatus || 'unpaid' %>
                                            </span>
                                            <% if(reg.AmountPaid > 0) { %>
                                                <div class="mt-1">
                                                    <small>Amount Paid: <strong>â‚¹<%= parseFloat(reg.AmountPaid).toLocaleString() %></strong></small>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="info-box">
                                            <small class="text-muted d-block">Attendance Status</small>
                                            <span class="badge <%= reg.AttendanceStatus === 'present' ? 'bg-success' : reg.AttendanceStatus === 'absent' ? 'bg-danger' : 'bg-secondary' %> status-badge">
                                                <%= reg.AttendanceStatus || 'pending' %>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="info-box">
                                            <small class="text-muted d-block">Event Status</small>
                                            <% if(isUpcoming) { %>
                                                <span class="badge bg-info status-badge">Upcoming</span>
                                            <% } else if(isPast) { %>
                                                <span class="badge bg-secondary status-badge">Past Event</span>
                                            <% } else { %>
                                                <span class="badge bg-success status-badge">Today</span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                <div class="d-flex flex-column gap-2">
                                    <% if(isUpcoming) { %>
                                        <a href="/feedback/form/<%= reg.EventID %>/<%= reg.ParticipantID %>" class="btn btn-primary btn-sm">
                                            Submit Feedback
                                        </a>
                                    <% } %>
                                    <% if(reg.AttendanceStatus === 'present' && isPast) { %>
                                        <a href="/feedback/form/<%= reg.EventID %>/<%= reg.ParticipantID %>" class="btn btn-success btn-sm">
                                            Leave Feedback
                                        </a>
                                    <% } %>
                                    <div class="mt-auto">
                                        <small class="text-muted">Registration ID: <%= reg.ParticipantID %></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>

                <div class="text-center mt-4">
                    <a href="/participants/register" class="btn btn-primary">Register for Another Event</a>
                </div>
            <% } %>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

