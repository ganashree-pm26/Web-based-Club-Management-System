<!DOCTYPE html>
<html>
<head>
    <title>Registration Successful!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .credentials-box {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            padding: 30px;
            margin: 30px 0;
        }
        .credential-item {
            background: rgba(255,255,255,0.2);
            border-radius: 10px;
            padding: 15px;
            margin: 10px 0;
        }
        .copy-btn {
            cursor: pointer;
            transition: all 0.3s;
        }
        .copy-btn:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header bg-success text-white text-center">
                        <h3 class="mb-0">‚úÖ Registration Successful!</h3>
                    </div>
                    <div class="card-body text-center">
                        <h4 class="mb-4">Welcome, <%= participant.name %>!</h4>
                        <p class="lead">Your registration has been completed successfully.</p>

                        <div class="credentials-box">
                            <h5 class="mb-4">üîê Your Login Credentials</h5>
                            <p class="text-warning"><strong>Please save these credentials - you'll need them to login!</strong></p>
                            
                            <div class="credential-item">
                                <small class="d-block mb-2">Username</small>
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="mb-0 font-monospace"><%= username %></h4>
                                    <button class="btn btn-light btn-sm copy-btn" onclick="copyToClipboard('<%= username %>', 'username')">
                                        üìã Copy
                                    </button>
                                </div>
                            </div>

                            <div class="credential-item">
                                <small class="d-block mb-2">Password</small>
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="mb-0 font-monospace" id="passwordDisplay">‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢</h4>
                                    <div>
                                        <button class="btn btn-light btn-sm me-2" onclick="togglePassword()">
                                            üëÅÔ∏è Show
                                        </button>
                                        <button class="btn btn-light btn-sm copy-btn" onclick="copyToClipboard('<%= password %>', 'password')">
                                            üìã Copy
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <strong>‚ö†Ô∏è Important:</strong> Please note down or screenshot these credentials. You will need them to login to your participant dashboard.
                        </div>

                        <div class="card mb-4">
                            <div class="card-body">
                                <h5>Registration Details</h5>
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Name:</strong></td>
                                        <td><%= participant.name %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email:</strong></td>
                                        <td><%= participant.email %></td>
                                    </tr>
                                    <% if(participant.phone) { %>
                                    <tr>
                                        <td><strong>Phone:</strong></td>
                                        <td><%= participant.phone %></td>
                                    </tr>
                                    <% } %>
                                    <tr>
                                        <td><strong>Participant ID:</strong></td>
                                        <td><%= participant.participantId %></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <a href="/login" class="btn btn-primary btn-lg">
                                üöÄ Go to Login Page
                            </a>
                            <a href="/participants/signup" class="btn btn-outline-secondary">
                                Register for Another Event
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let passwordVisible = false;
        const actualPassword = '<%= password %>';

        function togglePassword() {
            passwordVisible = !passwordVisible;
            document.getElementById('passwordDisplay').textContent = passwordVisible ? actualPassword : '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢';
            event.target.textContent = passwordVisible ? 'üôà Hide' : 'üëÅÔ∏è Show';
        }

        function copyToClipboard(text, type) {
            navigator.clipboard.writeText(text).then(() => {
                const btn = event.target;
                const originalText = btn.textContent;
                btn.textContent = '‚úÖ Copied!';
                btn.classList.add('btn-success');
                btn.classList.remove('btn-light');
                setTimeout(() => {
                    btn.textContent = originalText;
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-light');
                }, 2000);
            });
        }
    </script>
</body>
</html>

