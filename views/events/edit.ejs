<!DOCTYPE html>
<html>
<head>
    <title>Edit Event</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            background: radial-gradient(circle at top left, #4f46e5 0, #0f172a 45%, #020617 100%);
            color: #e5e7eb;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            padding: 24px;
        }
        .glass-card {
            background: rgba(15, 23, 42, 0.9);
            border-radius: 18px;
            border: 1px solid rgba(148, 163, 184, 0.3);
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.65);
            color: #e5e7eb;
            padding: 30px;
        }
        .form-control, .form-select {
            background: rgba(30, 41, 59, 0.8) !important;
            border: 1px solid rgba(148, 163, 184, 0.3) !important;
            color: #e5e7eb !important;
            border-radius: 8px !important;
        }
        .form-control:focus, .form-select:focus {
            background: rgba(30, 41, 59, 0.9) !important;
            border-color: #4f46e5 !important;
            color: #e5e7eb !important;
            box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.25) !important;
        }
        label {
            color: #e5e7eb !important;
        }
        h1, h2, h3, h4, h5, h6 {
            color: #e5e7eb !important;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="glass-card">
        <h2 class="mb-4">Edit Event </h2>

        <form action="/events/edit/<%= event.EventID %>" method="POST" class="mt-3">

    <div class="mb-3">
        <label>Event Name</label>
        <input type="text" class="form-control" name="EventName" value="<%= event.EventName %>" required>
    </div>

    <div class="mb-3">
        <label>Date</label>
        <input type="date" class="form-control" name="EventDate" value="<%= event.EventDate.toISOString().split('T')[0] %>" required>
    </div>

    <div class="mb-3">
        <label>Venue</label>
        <input type="text" class="form-control" name="Venue" value="<%= event.Venue %>" required>
    </div>

    <div class="mb-3">
        <label>Club</label>
        <select name="ClubID" class="form-select" required>
            <% clubs.forEach(club => { %>
                <option value="<%= club.ClubID %>" <%= event.ClubID == club.ClubID ? 'selected' : '' %>><%= club.ClubName %></option>
            <% }) %>
        </select>
    </div>

    <div class="mb-3">
        <label>Budget</label>
        <input type="number" step="0.01" class="form-control" name="Budget" value="<%= event.Budget %>">
    </div>

            <button class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

</body>
</html>
