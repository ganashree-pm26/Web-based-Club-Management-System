<!DOCTYPE html>
<html>
<head>
    <title>Manage Clubs - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            background: radial-gradient(circle at top left, #4f46e5 0, #0f172a 45%, #020617 100%);
            color: #e5e7eb;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            padding: 24px 0;
        }
        .glass-card {
            background: rgba(15, 23, 42, 0.9);
            border-radius: 18px;
            border: 1px solid rgba(148, 163, 184, 0.3);
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.65);
            color: #e5e7eb;
        }
        .glass-navbar {
            background: rgba(15, 23, 42, 0.95) !important;
            border-bottom: 1px solid rgba(148, 163, 184, 0.3);
            backdrop-filter: blur(10px);
        }
        .card {
            background: rgba(15, 23, 42, 0.9) !important;
            border: 1px solid rgba(148, 163, 184, 0.3) !important;
            border-radius: 18px !important;
            color: #e5e7eb !important;
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.65) !important;
        }
        .table {
            color: #e5e7eb !important;
        }
        .table thead th {
            border-bottom: 1px solid rgba(148, 163, 184, 0.3) !important;
            color: #e5e7eb !important;
            background: rgba(30, 41, 59, 0.6) !important;
        }
        .table tbody tr {
            border-bottom: 1px solid rgba(148, 163, 184, 0.2) !important;
        }
        .table tbody td {
            background: rgba(15, 23, 42, 0.5) !important;
            color: #e5e7eb !important;
        }
        .table-hover tbody tr:hover {
            background: rgba(30, 41, 59, 0.5) !important;
        }
        h1, h2, h3, h4, h5, h6 {
            color: #e5e7eb !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark glass-navbar mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">Manage Clubs</span>
            <div>
                <a href="/admin/dashboard" class="btn btn-outline-light btn-sm me-2">‚Üê Dashboard</a>
                <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Club Management</h2>
            <a href="/clubs/create" class="btn btn-primary">+ Create Club</a>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Club Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% clubs.forEach(club => { %>
                            <tr>
                                <td><%= club.ClubID %></td>
                                <td><strong><%= club.ClubName %></strong></td>
                                <td><%= club.Description || '-' %></td>
                                <td>
                                    <a href="/clubs/edit/<%= club.ClubID %>" class="btn btn-sm btn-warning me-2">Edit</a>
                                    <a href="/clubs/delete/<%= club.ClubID %>" 
                                       class="btn btn-sm btn-danger" 
                                       onclick="return confirm('Delete this club?')">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>