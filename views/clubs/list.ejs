<!DOCTYPE html>
<html>
<head>
    <title>Manage Clubs - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">Manage Clubs</span>
            <div>
                <a href="/admin/dashboard" class="btn btn-outline-light btn-sm me-2">‚Üê Dashboard</a>
                <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Club Management</h2>
            <a href="/clubs/create" class="btn btn-primary">+ Create Club</a>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Club Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% clubs.forEach(club => { %>
                            <tr>
                                <td><%= club.ClubID %></td>
                                <td><strong><%= club.ClubName %></strong></td>
                                <td><%= club.Description || '-' %></td>
                                <td>
                                    <a href="/clubs/edit/<%= club.ClubID %>" class="btn btn-sm btn-warning me-2">Edit</a>
                                    <a href="/clubs/delete/<%= club.ClubID %>" 
                                       class="btn btn-sm btn-danger" 
                                       onclick="return confirm('Delete this club?')">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>